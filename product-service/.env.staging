# Staging Environment Configuration for product-service
NODE_ENV=staging
ENVIRONMENT=staging

# Service URLs (will be updated with actual Render/Vercel URLs)
SERVICE_REGISTRY_URL=https://staging-registry.exalt-ecosystem.com
AUTH_SERVICE_URL=https://staging-auth.exalt-ecosystem.com
API_GATEWAY_URL=https://staging-gateway.exalt-ecosystem.com
CONFIG_SERVER_URL=https://staging-config.exalt-ecosystem.com

# Database (will use staging databases)
DATABASE_URL=${STAGING_DATABASE_URL}
REDIS_URL=${STAGING_REDIS_URL}

# External Services
JWT_SECRET=${STAGING_JWT_SECRET}
API_KEY=${STAGING_API_KEY}

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000

# Multi-language support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,de,es,ar

# Multi-currency support  
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,EUR,GBP,CAD,NGN,ZAR

# CORS Configuration
CORS_ORIGINS=https://staging-dashboard.exalt-ecosystem.com,https://staging-marketplace.exalt-ecosystem.com,https://staging-admin.exalt-ecosystem.com,https://staging-vendor.exalt-ecosystem.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_ENABLED=true
HTTPS_ONLY=true

