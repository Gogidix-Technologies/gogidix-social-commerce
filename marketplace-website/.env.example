# Application Configuration
REACT_APP_NAME=Exalt Marketplace
REACT_APP_VERSION=$npm_package_version
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:8080/api/v1
REACT_APP_MARKETPLACE_API_URL=http://localhost:8081/api/v1
REACT_APP_USER_SERVICE_URL=http://localhost:8082/api/v1
REACT_APP_PRODUCT_SERVICE_URL=http://localhost:8083/api/v1
REACT_APP_ORDER_SERVICE_URL=http://localhost:8084/api/v1
REACT_APP_PAYMENT_SERVICE_URL=http://localhost:8085/api/v1
REACT_APP_NOTIFICATION_SERVICE_URL=http://localhost:8086/api/v1

# WebSocket Configuration
REACT_APP_WEBSOCKET_URL=ws://localhost:8080/ws
REACT_APP_ENABLE_WEBSOCKET=true

# Authentication
REACT_APP_AUTH_DOMAIN=auth.exaltmarketplace.com
REACT_APP_AUTH_CLIENT_ID=marketplace-web-client
REACT_APP_AUTH_REDIRECT_URI=http://localhost:3000/auth/callback
REACT_APP_AUTH_SCOPE=openid profile email
REACT_APP_TOKEN_STORAGE_KEY=exalt_marketplace_token
REACT_APP_REFRESH_TOKEN_KEY=exalt_marketplace_refresh_token

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_SOCIAL_LOGIN=true
REACT_APP_ENABLE_MULTI_VENDOR=true
REACT_APP_ENABLE_REVIEWS=true
REACT_APP_ENABLE_WISHLIST=true
REACT_APP_ENABLE_COMPARE=true
REACT_APP_ENABLE_LIVE_CHAT=true
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true

# UI Configuration
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,es,fr,de,zh,ar
REACT_APP_DEFAULT_CURRENCY=USD
REACT_APP_SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,CNY
REACT_APP_DATE_FORMAT=MM/DD/YYYY
REACT_APP_TIME_FORMAT=HH:mm:ss

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=20
REACT_APP_MAX_PAGE_SIZE=100

# File Upload
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Maps Configuration
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
REACT_APP_DEFAULT_LATITUDE=40.7128
REACT_APP_DEFAULT_LONGITUDE=-74.0060
REACT_APP_DEFAULT_ZOOM=12

# Analytics
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X
REACT_APP_GTM_ID=GTM-XXXXXXX
REACT_APP_MIXPANEL_TOKEN=your-mixpanel-token

# Payment Configuration
REACT_APP_STRIPE_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx
REACT_APP_PAYPAL_CLIENT_ID=your-paypal-client-id

# Social Media
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id

# CDN Configuration
REACT_APP_CDN_URL=https://cdn.exaltmarketplace.com
REACT_APP_IMAGE_CDN_URL=https://images.exaltmarketplace.com

# Error Tracking
REACT_APP_SENTRY_DSN=https://xxxxxxxxx@sentry.io/xxxxxxx

# Performance Monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_PERFORMANCE_SAMPLE_RATE=0.1

# Security
REACT_APP_ENABLE_CSP=true
REACT_APP_CSP_REPORT_URI=https://csp.exaltmarketplace.com/report

# Cache Configuration
REACT_APP_CACHE_TTL=3600
REACT_APP_ENABLE_SERVICE_WORKER=true

# Development Tools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_ENABLE_REACT_DEVTOOLS=true