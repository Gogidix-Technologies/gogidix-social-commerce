# Exalt Social Commerce - Staging Environment
# Production-like settings for staging deployment

# API Configuration
REACT_APP_API_BASE_URL=https://api-staging.exalt.com
REACT_APP_WEBSOCKET_URL=wss://api-staging.exalt.com/ws

# Application Configuration
REACT_APP_ENVIRONMENT=staging
REACT_APP_DOMAIN=social-commerce
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true

# Domain URLs for Staging
REACT_APP_CENTRALIZED_DASHBOARD_URL=https://executive-staging.vercel.app
REACT_APP_WAREHOUSING_URL=https://warehousing-staging.vercel.app
REACT_APP_COURIER_URL=https://courier-staging.vercel.app
REACT_APP_HAULAGE_URL=https://haulage-staging.vercel.app
REACT_APP_INFRASTRUCTURE_URL=https://infrastructure-staging.vercel.app

# Custom Domain URLs (staging)
REACT_APP_SOCIAL_COMMERCE_DOMAIN=https://social-staging.exalt.com
REACT_APP_CENTRALIZED_DASHBOARD_DOMAIN=https://executive-staging.exalt.com
REACT_APP_WAREHOUSING_DOMAIN=https://warehousing-staging.exalt.com

# Social Commerce Specific
REACT_APP_SOCIAL_MEDIA_INTEGRATION=true
REACT_APP_VENDOR_ONBOARDING_ENABLED=true
REACT_APP_PAYMENT_SANDBOX_MODE=false

# Authentication
REACT_APP_AUTH_PROVIDER=firebase
REACT_APP_OAUTH_REDIRECT_URI=https://social-staging.exalt.com/auth/callback

# Payment Configuration (Staging)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_staging
REACT_APP_PAYPAL_CLIENT_ID=staging_paypal_client_id

# Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=GA-STAGING-ID
REACT_APP_MIXPANEL_TOKEN=staging-mixpanel-token

# Error Reporting
REACT_APP_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project

# Security Headers
REACT_APP_CSP_REPORT_URI=https://api-staging.exalt.com/security/csp-report